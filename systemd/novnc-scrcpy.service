[Unit]
Description=Android Device Host (Xvfb + scrcpy + x11vnc + noVNC)
After=network.target

[Service]
Type=simple
User=__USER__
WorkingDirectory=__BASE_DIR__
EnvironmentFile=-__BASE_DIR__/config/device-host.env
ExecStart=__BASE_DIR__/scripts/start-novnc-scrcpy.sh
Restart=always
RestartSec=3
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
